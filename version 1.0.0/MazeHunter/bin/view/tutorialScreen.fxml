<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import controller.TutorialController?>

<!-- LINK THE CSS STYLESHEET TO THIS FXML FILE -->
<BorderPane prefHeight="960" prefWidth="980" styleClass="root" stylesheets="@/win.css" fx:id="root1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="controller.TutorialController" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Top area with Title -->
    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="titleLabel" styleClass="title-label" text="Basics" />
            </children>
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
        </HBox>
    </top>

    <!-- LEFT: THE NEW VERTICAL STEPPER -->
    <left>
        <VBox alignment="CENTER_LEFT" spacing="5" BorderPane.alignment="CENTER_LEFT">
            <children>
                <!-- Node 1 -->
                <Button fx:id="step1Btn" onMouseClicked="#handleClick" styleClass="step-button" text="1" />
                <Line endX="0" endY="40" styleClass="step-line" layoutX="30.0" />

                <!-- Node 2 -->
                <Button fx:id="step2Btn" onMouseClicked="#handleClick" styleClass="step-button" text="2" />
                <Line endX="0" endY="40" styleClass="step-line" />

                <!-- Node 3 -->
                <Button fx:id="step3Btn" onMouseClicked="#handleClick" styleClass="step-button" text="3" />
                <Line endX="0" endY="40" styleClass="step-line" />

                <!-- Node 4 -->
                <Button fx:id="step4Btn" onMouseClicked="#handleClick" styleClass="step-button" text="4" />
            </children>
            <padding>
                <Insets left="40" />
            </padding>
        </VBox>
    </left>


    <!-- CENTER: The content area with GIF and Text -->
    <center>
        <HBox alignment="CENTER" spacing="20" fx:id="content">
            <children>
                <!-- This ImageView will accept the GIF loaded from the controller -->
                <ImageView fx:id="tutorialImage" fitHeight="500" fitWidth="450" preserveRatio="true" />
                
                <TextArea fx:id="descriptionArea" maxHeight="650" text=" " editable="false" styleClass="description-area" wrapText="true" />
            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </HBox>
    </center>

</BorderPane>